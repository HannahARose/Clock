#ifndef CLOCK_CONFIG_H__
#define CLOCK_CONFIG_H__

#include <string_view>

/**
 * @brief CMake configuration variables for the Clock project.
 * This file is generated by CMake and contains project metadata such as
 * name, version, and Git SHA.
 */

namespace clk::cmake {
/// Project name
inline constexpr std::string_view PROJECT_NAME = "@PROJECT_NAME@";
/// Project version string
inline constexpr std::string_view PROJECT_VERSION = "@PROJECT_VERSION@";
// clang-format off
/// Major version number
inline constexpr int PROJECT_VERSION_MAJOR = { @PROJECT_VERSION_MAJOR@ };
/// Minor version number
inline constexpr int PROJECT_VERSION_MINOR = { @PROJECT_VERSION_MINOR@ };
/// Patch version number
inline constexpr int PROJECT_VERSION_PATCH = { @PROJECT_VERSION_PATCH@ };
/// Tweak version number
inline constexpr int PROJECT_VERSION_TWEAK = { @PROJECT_VERSION_TWEAK@ };
// clang-format on

/// Git branch name
inline constexpr std::string_view GIT_BRANCH = "@GIT_BRANCH@";
/// Git commit SHA
inline constexpr std::string_view GIT_COMMIT = "@GIT_COMMIT@";
// clang-format off
inline constexpr bool GIT_CLEAN = @GIT_CLEAN@;
// clang-format on
}// namespace clk::cmake

#endif// CLOCK_CONFIG_H__
